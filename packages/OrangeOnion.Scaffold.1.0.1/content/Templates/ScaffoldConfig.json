{
    "configuration": {
        "DbContext" : "BlueOnion.Repository.BlueOnionContext",
        "TemplateDir": "Templates",
        "Project": [
            {
                "Name": "BlueOnion.Domain",
                "NugetPackage": [
                    {
                        "Name": "BlueOnion.Domain",
                        "Version": "1.0.0"
                    }
                ]
            },
            {
                "Name": "BlueOnion.MVC"

            },
            {
                "Name": "BlueOnion.Repository"
            },
            {
                "Name": "BlueOnion.Service"
            },
            {
                "Name": "BlueOnion.ViewModel"
            }

        ],
        "Scaffold": [
            {
                "Project": "BlueOnion.ViewModel",
                "File": "Interfaces\\Repositories\\I{modelName}Repository",
                "Template": "ViewModel.IRepository"
            },
            {
                "Project": "BlueOnion.ViewModel",
                "File": "Interfaces\\IRepositoriesWrapper",
                "Template": "ViewModel.IRepositoryWrapper"
            },
            {
                "Project": "BlueOnion.ViewModel",
                "File": "Interfaces\\Services\\Query\\I{modelName}ViewModelQueryService",
                "Template": "ViewModel.IViewModelQueryService"
            }
        ]
    }
}
