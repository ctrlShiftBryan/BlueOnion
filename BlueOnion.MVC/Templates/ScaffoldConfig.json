{
    "configuration": {
        "DbContext": "BlueOnion.Repository.BlueOnionContext",
        "TemplateDir": "Templates",
        "Project": [
            {
                "Name": "BlueOnion.Domain",
                "NugetPackage": [
                    {
                        "Name": "BlueOnion.Domain",
                        "Version": "1.0.0"
                    }
                ]
            },
            {
                "Name": "BlueOnion.MVC"

            },
            {
                "Name": "BlueOnion.Repository"
            },
            {
                "Name": "BlueOnion.Service"
            },
            {
                "Name": "BlueOnion.ViewModel"
            }

        ],
        "Scaffold": [
            {
                "Project": "BlueOnion.ViewModel",
                "File": "Interfaces\\Repositories\\I{modelName}Repository",
                "Template": "ViewModel.IRepository"
            },
            {
                "Project": "BlueOnion.ViewModel",
                "File": "Interfaces\\IRepositoriesWrapper",
                "Template": "ViewModel.IRepositoryWrapper"
            },
            {
                "Project": "BlueOnion.ViewModel",
                "File": "Interfaces\\Services\\Query\\I{modelName}ViewModelQueryService",
                "Template": "ViewModel.IViewModelQueryService"
            },
            {
                "Project": "BlueOnion.ViewModel",
                "File": "Interfaces\\Services\\Command\\I{modelName}ViewModelCommandService",
                "Template": "ViewModel.IViewModelCommandService"
            },
            {
                "Project": "BlueOnion.ViewModel",
                "File": "Interfaces\\Services\\Query\\I{modelName}QueryService",
                "Template": "ViewModel.IDomainQueryService"
            },
            {
                "Project": "BlueOnion.ViewModel",
                "File": "Interfaces\\Services\\Command\\I{modelName}CommandService",
                "Template": "ViewModel.IDomainCommandService"
            },
            {
                "Project": "BlueOnion.ViewModel",
                "File": "ViewModels\\{modelName}ViewModel",
                "Template": "ViewModel.ViewModel"
            },
            {
                "Project": "BlueOnion.ViewModel",
                "File": "Dto\\{modelName}\\{modelName}Dto",
                "Template": "ViewModel.Dto.Summary"
            },
            {
                "Project": "BlueOnion.ViewModel",
                "File": "Dto\\{modelName}\\{modelName}DetailDto",
                "Template": "ViewModel.Dto.Detail"
            }
        ]
    }
}
